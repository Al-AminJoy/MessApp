<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basicColor"
    android:orientation="horizontal"
    android:padding="@dimen/padding24dp"
    android:weightSum="3">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegisterMaleId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin4dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardElevation="@dimen/dimen2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/basicColor"
            android:gravity="center"
            android:padding="@dimen/padding8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_male"
                android:gravity="center"
                android:text="Male "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegisterFemaleId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin8dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/dimen2dp"
        app:cardElevation="@dimen/dimen4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/basicColor"
            android:padding="@dimen/padding8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_female"
                android:gravity="center"
                android:text="Female "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegisterOtherId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin8dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/dimen2dp"
        app:cardElevation="@dimen/dimen4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/basicColor"
            android:padding="@dimen/padding8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_other"
                android:gravity="center"
                android:text="Other "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>