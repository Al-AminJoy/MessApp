<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrevMonthTotalOverviewFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="3dp"
            android:layout_marginTop="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin16dp"
            android:layout_marginLeft="@dimen/margin16dp"

            >
            <TextView
                android:id="@+id/tvPrevMonthTotalStatMonthId"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="September"
                android:textColor="@color/whiteColor"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@color/basicColor"
                android:padding="10dp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin16dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginRight="@dimen/margin16dp"
                    android:layout_marginLeft="@dimen/margin16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="@color/basicColor"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="80dp"
                        android:paddingBottom="80dp"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Debit"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/whiteColor"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                />
                            <TextView
                                android:id="@+id/tvPrevMonthTotalDebitId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Meal"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/margin32dp"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/whiteColor"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                />
                            <TextView
                                android:id="@+id/tvPrevMonthTotalMealId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/whiteColor"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >



                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Meal Rate"
                                    android:gravity="center"
                                    android:textColor="@color/whiteColor"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteColor"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    />
                                <TextView
                                    android:id="@+id/tvPrevMonthMealRateId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:gravity="center"
                                    android:textColor="@color/whiteColor"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Balanced Status"
                                    android:gravity="center"
                                    android:textColor="@color/whiteColor"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/margin32dp"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteColor"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    />
                                <TextView
                                    android:id="@+id/tvPrevMonthTotalExpenseId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:gravity="center"
                                    android:textColor="@color/whiteColor"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    >

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>




</RelativeLayout>