<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/basicColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/ibtUpdateWarnDialogCloseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:background="@color/basicColor"
        android:padding="@dimen/padding8dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:layout_gravity="right"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_warning"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateWarning"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/textSizeM"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin14dp"
        android:padding="@dimen/padding4dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btUpdateWarnDialogYesId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:padding="@dimen/padding10dp"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/submitButtonColor"
            app:rippleColor="@color/blackColor"
            android:layout_margin="@dimen/margin10dp"
            app:cornerRadius="@dimen/padding4dp"
            />
    </LinearLayout>

</LinearLayout>