<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin10dp"
    android:layout_marginRight="@dimen/margin10dp"
    android:layout_marginTop="@dimen/margin8dp"
    android:background="@color/basicColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen2dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/basicColor"
            android:layout_margin="@dimen/margin2dp"
            android:padding="@dimen/padding10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin4dp"
                android:layout_marginBottom="@dimen/margin4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMyUpdateReqLayDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : 18-04-2020"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/whiteColor"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/basicColor"
                android:layout_margin="@dimen/margin2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:gravity="center"
                    android:padding="@dimen/padding4dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textSizeM"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/basicColor"
                android:layout_margin="@dimen/margin2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayPreBreId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayCurrBreId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="@dimen/padding4dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textSizeM"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/basicColor"
                android:layout_margin="@dimen/margin2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayPreLunchId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqCurrLunchId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="@dimen/padding4dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textSizeM"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/basicColor"
                android:layout_margin="@dimen/margin2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqPreDinnerId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayCurrDinnerId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:padding="@dimen/padding4dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textSizeM"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/basicColor"
                android:layout_margin="@dimen/margin2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayPreDebitId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:padding="@dimen/padding4dp"
                    android:textSize="@dimen/textSizeM"
                    />
                <TextView
                    android:id="@+id/tvMyUpdateReqLayCurrDebitId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:padding="@dimen/padding4dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/textSizeM"
                    android:gravity="center"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tvMyUpdateReqStatusId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin8dp"
                android:background="@color/submitButtonColor"
                android:padding="@dimen/padding10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>