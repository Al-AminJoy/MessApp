<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/basicColor"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding10dp"
        android:background="@color/submitButtonColor"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit_hand"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding6dp"
        android:background="@color/basicColor"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit !"
            android:textColor="@color/whiteColor"
            android:padding="@dimen/padding10dp"
            android:textSize="@dimen/textSizeXL"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are Sure Want to Exit ?"
        android:textColor="@color/whiteColor"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginRight="@dimen/margin16dp"
        android:textSize="@dimen/textSizeL"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin14dp"
        android:padding="@dimen/padding4dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btExitYesDialogId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:padding="@dimen/padding10dp"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/submitButtonColor"
            app:rippleColor="@color/blackColor"
            android:layout_margin="@dimen/margin10dp"
            app:cornerRadius="@dimen/padding10dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btExitNoDialogId"
            android:layout_margin="@dimen/margin10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            app:cornerRadius="@dimen/padding10dp"
            android:padding="@dimen/padding10dp"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/submitButtonColor"
            app:rippleColor="@color/blackColor"
            />
    </LinearLayout>


</LinearLayout>