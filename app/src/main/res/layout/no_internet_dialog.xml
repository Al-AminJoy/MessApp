<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/basicColor"
    android:padding="@dimen/padding14dp"
    android:layout_height="wrap_content">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="No Internet !"
      android:textColor="@color/redColor"
      android:textSize="@dimen/textSizeXL"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, Turn On Your Internet Connection"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/textSizeM"
        android:layout_marginTop="@dimen/margin8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btNoInternetDialogOkId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:padding="@dimen/padding2dp"
        android:textColor="@color/whiteColor"
        android:backgroundTint="@color/submitButtonColor"
        app:rippleColor="@color/blackColor"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_gravity="end"
        />
</LinearLayout>