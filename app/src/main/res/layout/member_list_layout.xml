<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin8dp"
        android:layout_marginTop="@dimen/margin4dp"
        android:layout_marginRight="@dimen/margin8dp"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basicColor"
            android:padding="@dimen/padding14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen100dp"
                android:layout_height="@dimen/dimen100dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:padding="15dp"
                android:paddingBottom="5dp"
                android:src="@drawable/profile" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linLayDetailsID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/tvMemberOptionId"
                    >
                    <TextView
                        android:id="@+id/tvMemberNameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding6dp"
                        android:text="Al-Amin Islam Joy"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp"
                        android:layout_gravity="start"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen2dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/whiteColor"

                        />
                    <TextView
                        android:id="@+id/tvMemberStatusId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding6dp"
                        android:text="Admin"
                        android:layout_gravity="start"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvMemberOptionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/ic_option"
                    android:textColor="@color/whiteColor"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>