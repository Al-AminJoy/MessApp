<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
       <com.google.android.material.tabs.TabLayout
           android:id="@+id/tlOthersStatDetailsId"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:tabTextColor="@color/blackColor"
           app:tabIndicatorColor="@color/itemSelectorColor"
           android:background="@color/basicColor"
           app:tabSelectedTextColor="@color/whiteColor"
           >
           <com.google.android.material.tabs.TabItem
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Total Overview"
               />
           <com.google.android.material.tabs.TabItem
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Daily Overview"
               />


       </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpOthersStatDetailsId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>

</RelativeLayout>