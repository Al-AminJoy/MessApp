<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/basicColor"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/ivSplashIconId"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/logo"
    android:layout_centerInParent="true"
    />
    <TextView
        android:layout_below="@id/ivSplashIconId"
        android:id="@+id/tvSplashTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mess App"
        android:textSize="@dimen/textSizeXL"
        android:textColor="@color/whiteColor"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin32dp"
        android:layout_marginTop="@dimen/margin18dp"
        />
</RelativeLayout>