<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin8dp"
        android:layout_marginTop="@dimen/margin2dp"
        android:layout_marginRight="@dimen/margin8dp"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basicColor"
            android:orientation="horizontal"
            android:padding="@dimen/padding4dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="01"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Al-Amin"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="01"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="550"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>