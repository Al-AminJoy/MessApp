<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/basicColor"
    android:padding="@dimen/padding24dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Left !"
        android:textColor="#FF0000"
        android:layout_gravity="center"
        android:padding="@dimen/padding10dp"
        android:textSize="@dimen/textSizeL"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvAdminLeftDialogNoteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note :\n All Member Will Make Admin\n And\n Your Mess Data Will Not Show In This Mess\nBut Mess Data Will Not Be Lost"
        android:textColor="@color/whiteColor"
        android:layout_gravity="center"
        android:padding="@dimen/padding10dp"
        android:textSize="@dimen/textSizeM"
        android:gravity="center"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/margin24dp"
        android:layout_marginLeft="@dimen/margin18dp"
        android:layout_marginRight="@dimen/margin18dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btLeftYesDialogId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:padding="@dimen/padding14dp"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/submitButtonColor"
            app:rippleColor="@color/blackColor"
            android:layout_margin="@dimen/margin8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btLeftNoDialogId"
            android:layout_margin="@dimen/margin8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No"
            android:padding="@dimen/padding14dp"
            android:textColor="@color/whiteColor"
            android:backgroundTint="@color/submitButtonColor"
            app:rippleColor="@color/blackColor"
            />
    </LinearLayout>
</LinearLayout>