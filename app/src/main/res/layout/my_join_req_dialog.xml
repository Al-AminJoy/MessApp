<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/basicColor"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/padding2dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibtMyMessReqDialogCloseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@color/basicColor"
            android:padding="@dimen/padding8dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:clickable="true"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeXL"
            android:text="Pending Request !"
            android:layout_gravity="center"
            android:textColor="@color/redColor"
            />
        <TextView
            android:id="@+id/tvMyMessReqDialogNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeL"
            android:text="Spark Mess"
            android:layout_gravity="center"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="@dimen/margin18dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin8dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/pbMyMessReqDialogCancelId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginLeft="@dimen/margin18dp"
                android:layout_marginRight="@dimen/margin18dp"
                android:indeterminateDrawable="@drawable/log_in_progress_color"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btMyMessReqDialogCancelId"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:padding="@dimen/padding14dp"
                android:textColor="@color/whiteColor"
                android:backgroundTint="@color/submitButtonColor"
                app:rippleColor="@color/blackColor"
                android:layout_marginLeft="@dimen/margin32dp"
                android:layout_marginRight="@dimen/margin32dp"
                android:layout_marginTop="@dimen/margin18dp"
                app:strokeColor="@color/whiteColor"
                app:strokeWidth="1dp"
                android:textSize="@dimen/textSizeM"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>