<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlMyStatId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/blackColor"
        app:tabBackground="@color/basicColor"
        app:tabIndicatorColor="@color/itemSelectorColor"
        app:tabSelectedTextColor="@color/whiteColor"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiMyStatusTotalOverviewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total Overview"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiMyStatusDailyOverviewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total Overview"
            />


    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpMyStatId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tlMyStatId"
        >


    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>