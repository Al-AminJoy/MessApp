<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".Fragment.MyStatTotalOverViewFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:layout_marginRight="@dimen/margin16dp"
        android:layout_marginLeft="@dimen/margin16dp"
        >
        <TextView
            android:id="@+id/tvMyTotalStatMonthId"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="September"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/textSizeM"
            android:gravity="center"
            android:background="@color/basicColor"
            android:padding="@dimen/padding14dp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp"
                android:layout_marginRight="@dimen/margin16dp"
                android:layout_marginLeft="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                app:cardBackgroundColor="@color/whiteColor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_margin="@dimen/margin2dp"
                    android:orientation="horizontal"
                    android:background="@color/basicColor"
                    android:paddingLeft="@dimen/padding8dp"
                    android:paddingRight="@dimen/padding8dp"
                    android:paddingTop="@dimen/padding64dp"
                    android:paddingBottom="@dimen/padding64dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expense"
                            android:gravity="center"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/textSizeM"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/whiteColor"
                            android:layout_marginLeft="@dimen/margin8dp"
                            android:layout_marginRight="@dimen/margin8dp"
                            android:layout_marginTop="@dimen/margin4dp"
                            android:layout_marginBottom="@dimen/margin4dp"
                            />
                        <TextView
                            android:id="@+id/tvMyTotalStatDebitId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:gravity="center"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/textSizeM"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meal Rate"
                            android:gravity="center"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/textSizeM"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin64dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/whiteColor"
                            android:layout_marginLeft="@dimen/margin8dp"
                            android:layout_marginRight="@dimen/margin8dp"
                            android:layout_marginTop="@dimen/margin4dp"
                            android:layout_marginBottom="@dimen/margin4dp"
                            />
                        <TextView
                            android:id="@+id/tvMyTotalStatMealRateId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:gravity="center"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/textSizeM"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/whiteColor"
                            android:layout_marginLeft="@dimen/margin8dp"
                            android:layout_marginRight="@dimen/margin8dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Used"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/textSizeM"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/whiteColor"
                                android:layout_marginLeft="@dimen/margin8dp"
                                android:layout_marginRight="@dimen/margin8dp"
                                android:layout_marginTop="@dimen/margin4dp"
                                android:layout_marginBottom="@dimen/margin4dp"
                                />
                            <TextView
                                android:id="@+id/tvMyTotalStatUsedId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/textSizeM"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Meal"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/textSizeM"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/margin64dp"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/whiteColor"
                                android:layout_marginLeft="@dimen/margin8dp"
                                android:layout_marginRight="@dimen/margin8dp"
                                android:layout_marginTop="@dimen/margin4dp"
                                android:layout_marginBottom="@dimen/margin4dp"
                                />
                            <TextView
                                android:id="@+id/tvMyTotalStatTotalMealId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:gravity="center"
                                android:textColor="@color/whiteColor"
                                android:textSize="@dimen/textSizeM"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                app:cardElevation="@dimen/dimen2dp"
                app:cardCornerRadius="@dimen/dimen4dp"
                android:layout_marginRight="@dimen/margin16dp"
                android:layout_marginLeft="@dimen/margin16dp"
                >
                <TextView
                    android:id="@+id/tvMyTotalStatBackId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You Will Get Back --"
                    android:textSize="@dimen/textSizeM"
                    android:padding="@dimen/padding14dp"
                    android:textColor="@color/whiteColor"
                    android:background="@color/basicColor"
                    android:gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>