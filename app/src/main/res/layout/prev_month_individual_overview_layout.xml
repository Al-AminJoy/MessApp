<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin2dp"
        android:layout_marginRight="@dimen/margin10dp"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen2dp"
        android:foreground="?android:selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basicColor"
            android:orientation="horizontal"
            android:padding="@dimen/padding6dp"
            android:weightSum="5"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Al-Amin"
                android:textColor="@color/whiteColor"
                android:padding="@dimen/padding2dp"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2500"
                android:textColor="@color/whiteColor"
                android:padding="@dimen/padding2dp"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="45"
                android:padding="@dimen/padding2dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2200"
                android:padding="@dimen/padding2dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+300"
                android:padding="@dimen/padding2dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>