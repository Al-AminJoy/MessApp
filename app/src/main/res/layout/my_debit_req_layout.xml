<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin16dp"
    android:layout_marginRight="@dimen/margin16dp"
    android:layout_marginTop="@dimen/margin8dp"
    android:background="@color/basicColor"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen2dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/basicColor"
            android:layout_margin="@dimen/margin2dp"
            android:padding="@dimen/padding14dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMyDebitReqDateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 17-04-2020"
                android:padding="@dimen/padding4dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM"
                />
            <TextView
                android:id="@+id/tvMyDebitReqDebitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit : 200"
                android:padding="@dimen/padding4dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM"
                />
            <TextView
                android:id="@+id/tvMyDebitReqStatusId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSizeM"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin8dp"
                android:background="@color/submitButtonColor"
                android:padding="@dimen/padding10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>