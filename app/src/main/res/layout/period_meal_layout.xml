<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/basicColor"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvPeriodLayNameId"
        android:layout_toLeftOf="@id/tvPeriodLayMealId"
        android:paddingLeft="@dimen/padding10dp"
        android:paddingRight="@dimen/padding10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Al-Amin Islam Joy"
        android:paddingTop="@dimen/padding6dp"
        android:paddingBottom="@dimen/padding6dp"
        android:textColor="@color/whiteColor"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/tvPeriodLayMealId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:paddingTop="@dimen/padding6dp"
        android:paddingBottom="@dimen/padding6dp"
        android:textColor="@color/whiteColor"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/padding10dp"
        android:paddingRight="@dimen/padding10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whiteColor"
        />
</RelativeLayout>