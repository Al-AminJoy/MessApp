<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:id="@+id/homeSwipRefId"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/svHome"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linLayHome"
            android:layout_marginBottom="@dimen/margin32dp"
            android:layout_below="@+id/HomeTitleItem"

            >
          <!--  <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello !"
                android:textSize="20sp"
                android:textColor="@color/basicColor"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="15dp"
                />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today Is"
                android:textSize="@dimen/textSizeL"
                android:textColor="@color/basicColor"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin8dp"
                />
            <TextView
                android:id="@+id/tvCurrentTimeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21 Sep 2019"
                android:textSize="@dimen/textSizeL"
                android:textColor="@color/basicColor"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin8dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:padding="@dimen/padding18dp"
                    android:background="@color/basicColor"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Meal"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="@color/whiteColor"/>
                            <TextView
                                android:id="@+id/tvHomeTotalMealId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="--"
                                android:textSize="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/whiteColor"
                            android:layout_marginRight="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meal Rate"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="@color/whiteColor"/>
                            <TextView
                                android:id="@+id/tvHomeMealRateId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="--"
                                android:textSize="15dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/whiteColor"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding18dp"
                    android:background="@color/basicColor"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/whiteColor"
                        android:text="Today Your Status"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/whiteColor"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Breakfast"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeUserBreFastId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/whiteColor"
                                android:layout_marginRight="5dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lunch"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeUserLunchId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:background="@color/whiteColor"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Dinner"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeUserDinnerId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding18dp"
                    android:background="@color/basicColor"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/whiteColor"
                        android:text="Today Mess Status"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/whiteColor"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Breakfast"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeTotalBreFastId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="--"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"

                            >
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/whiteColor"
                                android:layout_marginRight="5dp"

                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lunch"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeTotalLunchId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="--"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:background="@color/whiteColor"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Dinner"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="@color/whiteColor"/>
                                <TextView
                                    android:id="@+id/tvHomeTotalDinnerId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="--"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/whiteColor"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
           <LinearLayout
               android:background="@color/basicColor"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginRight="@dimen/margin10dp"
               android:layout_marginLeft="@dimen/margin10dp"
               android:layout_marginBottom="@dimen/margin4dp"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:id="@+id/rlHomeBreakfastId"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Breakfast"
                       android:textSize="@dimen/textSizeM"
                       android:background="@color/basicColor"
                       android:gravity="center"
                       android:layout_centerInParent="true"
                       android:textColor="@color/whiteColor"
                       android:padding="@dimen/padding6dp"
                       android:drawableLeft="@drawable/ic_breakfast"
                       />
                   <ImageView
                       android:id="@+id/ivHomeBreakfastDropdownId"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_drop_down"
                       android:layout_alignParentRight="true"
                       android:layout_centerInParent="true"
                       android:layout_marginRight="@dimen/margin10dp"
                       android:layout_marginLeft="@dimen/margin10dp"
                       android:visibility="visible"
                       />
                   <ImageView
                       android:id="@+id/ivHomeBreakfastDropUpId"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_arrow_drop_up"
                       android:layout_alignParentRight="true"
                       android:layout_centerInParent="true"
                       android:visibility="gone"
                       android:layout_marginRight="@dimen/margin10dp"
                       android:layout_marginLeft="@dimen/margin10dp"
                       />

               </RelativeLayout>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rvBreakfastID"
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/margin10dp"
                   android:layout_marginRight="@dimen/margin10dp"
                   android:layout_marginBottom="@dimen/margin4dp"
                   android:visibility="gone"
                   android:layout_height="match_parent"/>
           </LinearLayout>

            <LinearLayout
                android:background="@color/basicColor"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin4dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rlHomeLunchId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lunch"
                        android:textSize="@dimen/textSizeM"
                        android:background="@color/basicColor"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/whiteColor"
                        android:padding="@dimen/padding6dp"
                        android:drawableLeft="@drawable/ic_lunch"
                        />
                    <ImageView
                        android:id="@+id/ivHomeLunchDropdownId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drop_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/margin10dp"
                        android:layout_marginLeft="@dimen/margin10dp"
                        />
                    <ImageView
                        android:id="@+id/ivHomeLunchDropUpId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_up"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin10dp"
                        android:layout_marginLeft="@dimen/margin10dp"
                        />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLunchID"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin10dp"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:layout_marginBottom="@dimen/margin4dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/basicColor"
              android:orientation="vertical"
              android:layout_marginRight="@dimen/margin10dp"
              android:layout_marginLeft="@dimen/margin10dp"
              android:layout_marginBottom="@dimen/margin4dp"
              >
              <RelativeLayout
                  android:id="@+id/rlHomeDinnerId"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Dinner"
                      android:textSize="@dimen/textSizeM"
                      android:background="@color/basicColor"
                      android:gravity="center"
                      android:layout_centerInParent="true"
                      android:textColor="@color/whiteColor"
                      android:padding="@dimen/padding6dp"
                      android:drawableLeft="@drawable/ic_dinner"
                      />
                  <ImageView
                      android:id="@+id/ivHomeDinnerDropdownId"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_drop_down"
                      android:layout_alignParentRight="true"
                      android:layout_centerInParent="true"
                      android:layout_marginRight="@dimen/margin10dp"
                      android:layout_marginLeft="@dimen/margin10dp"
                      android:visibility="visible"
                      />
                  <ImageView
                      android:id="@+id/ivHomeDinnerDropUpId"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_arrow_drop_up"
                      android:layout_alignParentRight="true"
                      android:layout_centerInParent="true"
                      android:visibility="gone"
                      android:layout_marginRight="@dimen/margin10dp"
                      android:layout_marginLeft="@dimen/margin10dp"
                      />
              </RelativeLayout>
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvDinnerID"
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/margin10dp"
                  android:layout_marginRight="@dimen/margin10dp"
                  android:layout_marginBottom="@dimen/margin4dp"
                  android:visibility="gone"
                  android:layout_height="wrap_content"/>
          </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>