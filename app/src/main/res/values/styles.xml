<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--   <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>-->
        <!-- To change the textColor of options menu-->
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/basicColor</item>
        For Overflow Icon
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <!-- For Overflow Icon -->
    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_option</item>

    </style>
    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Button.Outlined" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_shape_normal</item>
    </style>
    <!--    Change Progress Color-->
    <style name="ProgressColor" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/basicColor</item>
        <item name="android:windowBackground">@color/whiteColor</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
   <!--    Overflow Menu Theme-->
    <style name="Theme" parent="Platform.MaterialComponents.Light">
        android:theme="@style/Theme"
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
    </style>
    <!--Toolbar Text Size-->
    <style name="yourstyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
    </style>
   <!--Splash Screen Intro Color-->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
     <!--Date Picker Background Color-->
    <!--<style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/basicColor</item>
        <item name="android:calendarTextColor">@color/blackColor</item>
        <item name="android:dayOfWeekBackground">@color/whiteColor</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:yearListSelectorColor">@color/basicColor</item>
    </style>-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/basicColor</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

</resources>
